<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="370dp"
    android:orientation="vertical"
    android:background="@drawable/inputs"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="NEW LABLE"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        />

    <EditText
        android:id="@+id/new_lable_name_edit_text"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Colour"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>


        <GridLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/colorBisque"
                android:layout_height="40dp"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorBisque"/>
            <Button
                android:id="@+id/colorDeepSkyBlue"
                android:layout_height="40dp"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorDeepSkyBlue"/>
            <Button
                android:id="@+id/colorLime"
                android:layout_height="40dp"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorLime"/>
            <Button
                android:id="@+id/colorYellow"
                android:layout_height="40dp"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorYellow"/>


        </GridLayout>
    <GridLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/colorCoral"
            android:layout_height="40dp"
            android:layout_width="50dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorCoral"/>
        <Button
            android:id="@+id/colorPurple"
            android:layout_height="40dp"
            android:layout_width="50dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPurple"/>
        <Button
            android:id="@+id/colorPink"
            android:layout_height="40dp"
            android:layout_width="50dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPink"/>

        <Button
            android:id="@+id/colorRed"
            android:layout_height="40dp"
            android:layout_width="50dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorRed"/>

    </GridLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">
    <Button
        android:id="@+id/lable_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textColor="@color/colorBlack"
        android:background="@drawable/confirm_button"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/lable_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button"
        android:layout_margin="20dp"/>
</LinearLayout>

</LinearLayout>